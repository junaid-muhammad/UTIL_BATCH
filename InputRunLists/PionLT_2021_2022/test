# Renaming files according to the fortran script.
for file in "${INPUT_INPUT_DIR}"/*; do
    filename="${file##*/}"              # Just the filename
    newname="${filename#${PHY_SETTING_LTSEP}}"     # Remove the prefix and underscore

    if [[ "$newname" == ave* ]]; then
        cp "$file" "${avg_inputFile}/${newname}"
        echo "Copied $file to ${avg_inputFile}/${newname}"
    else
        cp "$file" "${setting_inputFile}/${newname}"
        echo "Copied $file to ${setting_inputFile}/${newname}"
    fi
done
